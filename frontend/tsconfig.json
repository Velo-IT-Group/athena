{
	"include": ["**/*.ts", "**/*.tsx"],
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["DOM", "DOM.Iterable", "ES2024"],
		"isolatedModules": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"verbatimModuleSyntax": false,
		"paths": {
			"@/*": ["./src/*"]
		},
		"noEmit": true
	}
}
